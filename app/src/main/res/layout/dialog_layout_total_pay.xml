<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    android:background="@drawable/themeshade_black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:fontFamily="@font/ageopersonaluse"
            android:text="Enter payment for Shop"
            android:layout_margin="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay for User(Rs)"
            android:fontFamily="@font/ageopersonaluse"
            android:layout_marginLeft="22dp"
            android:textSize="17dp"
            android:layout_marginBottom="14dp"
            />

        <EditText
            android:id="@+id/dialog_edit_text_total_pay_input"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/february_2"
            android:hint="Enter Amount"
            android:inputType="number"
            android:layout_marginBottom="14dp" />

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/dialog_total_pay_submit"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Submit Payment"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/curved_view_red1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:fontFamily="@font/ageopersonaluse"
                />

            <TextView
                android:id="@+id/dialog_total_payment_text"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/dialog_total_pay_submit"
                android:text="Make Full payment"
                android:background="@drawable/curved_view_red1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:fontFamily="@font/ageopersonaluse"
                />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>