<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_order_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_order_id"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="dummy_Name"
            android:fontFamily="@font/colab_lig"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/row_order_date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="dummy Date"
            android:textColor="#000"
            android:orientation="horizontal">


        </TextView>

        <TextView
            android:id="@+id/row_order_amount"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="dummy_Name"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/row_order_remaining"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="dummy_Name"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/row_amount_paid"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="dummy_Name"
            android:textColor="#000"
            android:gravity="left"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/order_status_paid"
                android:layout_width="54dp"
                android:layout_height="14dp"
                android:background="@drawable/themeshade_black_curve"
                android:textColor="#fff"
                android:text="PAID"
                android:textSize="9dp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/order_status_pending"
                android:layout_width="54dp"
                android:layout_height="14dp"
                android:background="@drawable/themeshade_red"
                android:textColor="#fff"
                android:text="PENDING"
                android:textSize="9dp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible"
                />

        </LinearLayout>


        <!--This is the start of actions-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/enter_pay1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="visible"
                android:background="@drawable/ic_enter_pay_grey_24dp"
                />

            <TextView
                android:id="@+id/print_order1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:visibility="visible"
                android:background="@drawable/ic_print_grey_24dp"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#22d3d3d3" />

</LinearLayout>